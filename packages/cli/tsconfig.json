{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "baseUrl": "../../",
    "paths": {
      "@minicc/core": ["packages/core/src"],
      "@minicc/core/*": ["packages/core/src/*"],
      "@minicc/sdk": ["packages/sdk/src"],
      "@minicc/sdk/*": ["packages/sdk/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../sdk" }],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
